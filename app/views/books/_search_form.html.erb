<%= form_tag('/books', method: :get) do %>
	<div class="input-group margin_top margin_bottom">
		<%= text_field_tag 'search', nil, placeholder: 'Enter search book...', class: "form-control" %>
		<span class="input-group-btn">
			<%= submit_tag 'Search', class: 'btn btn-default' %>
		</span>
	</div>
<% end %>