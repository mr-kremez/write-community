<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="row">
	<div class="col-md-7">
		<%= paginate @books %>
	</div>
	<div class="col-md-5">		
		<%= render 'search_form' %>
	</div>
</div>

<div class="row">
	<div class='col-md-9'>
		<%= render 'books_for_index' %>
	</div>
	<div class='col-md-3'>
		<%= render 'list_of_categories' %>
		<%= render 'tags_cloud' %>
	</div>
</div>

